<%- include('partials/header'); -%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">CampMonk</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">

                <img src="<%=camp.url%>" />

                <div class="caption-full">
                    <h4 class="float-right">â‚¹ 1500.0/night</h4>
                    <h4><%=camp.name%></h4>
                    <p><%=camp.desc%></p>
                    <p>
                        <em>Submitted By <%=camp.author.username %> </em>
                    </p>
                    <%if(currentUser && camp.author.id.equals(currentUser._id)) {  %>
                    <a href="/campgrounds/<%= camp._id %>/edit" class="btn btn-warning">Edit</a>

                    <form id="delete-button-camp" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button> </form>
                    <% } %>
                </div>
            </div>
            <div class="card card-body bg-light">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new ">Comment</a>
                </div>
                <hr>
                <% camp.comments.forEach(function(comment){%>
                <div>
                    <strong><%=   comment.author.username%></strong>
                    <span class="float-right">10 Days ago</span>
                </div>
                <div><%=comment.text%></div>
                <%if(currentUser && comment.author.id.equals(currentUser._id)) {  %>
                    <div style="display: inline;">
                <a style="width: 56px;" class="btn btn-xs btn-warning" href="/campgrounds/<%= camp._id %>/comments/<%=comment._id  %>/edit">Edit</a>
                
                <form id="delete-button-camp" style="width: 56px;"action="/campgrounds/<%= camp._id %>/comments/<%=comment._id  %>?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                </form>
                </div>

                <hr>
                <% } %>
                <%  }); %>
            </div>

        </div>
    </div>

</div>


